<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{{ page_title|default('Homepage')|trans }}</title>

    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width">

    {% block style %}
    <link rel="stylesheet" href="{{ app.request.basepath }}/assets/css/styles.css">
    {% endblock %}

    <script src="{{ app.request.basepath }}/js/libs/modernizr-2.5.3-respond-1.1.0.min.js"></script>
</head>
<body>
<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->

    {% set active = active|default(null) %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('homepage') }}">{{ 'PHP Live !'|trans }}</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li {% if 'homepage' == active %}class="active"{% endif %}><a href="{{ path('homepage') }}">{{ 'PHP'|trans }}</a></li>
                        <li {% if 'jscript' == active %}class="active"{% endif %}><a href="{{ path('jscript') }}">{{ 'Javascript'|trans }}</a></li>
                        <li {% if 'sql' == active %}class="active"{% endif %}><a href="{{ path('sql') }}">{{ 'SQL'|trans }}</a></li>
                        <li class="dropdown{% if 'tools' == active %} active{% endif %}">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                {{ 'Tools'|trans }}
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                            <li><a href="{{ path('encode') }}">Password encoder</a></li>
                            <li><a href="{{ path('phpinfo') }}">PHP infos</a></li>
                            </ul>
                        </li>
                        <!--<li {% if 'doc' == active %}class="active"{% endif %}><a href="{{ path('doc') }}">Doc...</a></li>-->
                        <li class="dropdown{% if 'account' == active %} active{% endif %}">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    {{ app.security.getToken().getUsername() }}
                                {% else %}
                                    Account
                                {% endif %}
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li><a href="{{ path('logout') }}">{{ 'Logout'|trans }}</a></li>
                                {% else %}
                                    <li><a href="{{ path('login') }}">{{ 'Login'|trans }}</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container">
        <div id="main" role="main" class="container">
            {% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
            {% for alert in alertTypeAvaillable %}
                {% if app.session.hasFlash(alert) %}
                        <div class="alert alert-{{ alert }}" >
                            <button class="close" data-dismiss="alert">Ã—</button>
                            {{ app.session.flash(alert)|trans }}
                        </div>
                {% endif %}
            {% endfor %}
            {% block content %}
            {% endblock %}
        </div>
    </div>
{% block javascript %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ app.request.basepath }}/js/libs/jquery-1.7.2.min.js"><\/script>')</script>
    <script src="{{ app.request.basepath }}/assets/js/scripts.js"></script>
{% endblock javascript %}
</body>
</html>
