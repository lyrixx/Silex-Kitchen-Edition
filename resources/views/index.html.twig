{% extends 'layout.html.twig' %}
{% set active = 'homepage' %}

{% block content %}
    {% if app.session.get('user') %}
        Hello {{ app.session.get('user').email }}
        <a href="{{ path('logout') }}">{{ 'Logout'|trans }}</a>
    {% else %}
        <h1>Hello</h1>
        Your a not logged. Please <a href="{{ path('login') }}">{{ 'connect'|trans }}</a>
    {% endif %}
{% endblock %}
